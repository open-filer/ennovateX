<!-- In res/layout/activity_main.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On-Device LLM Personalization"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Not Loaded"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/promptEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your prompt here"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/generateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Response" />

    <TextView
        android:id="@+id/responseTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Response will appear here..." />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personalization Example:"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/personalizeEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter a full sentence to learn from"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/personalizeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personalize (1 Step)" />

</LinearLayout>



